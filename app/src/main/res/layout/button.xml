<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="4">
    <Button
        android:layout_column="0"
        android:layout_row="0"
        android:text="7"
        android:background="@drawable/seven"
        android:textSize="40dp"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:onClick="numberClick"/>
    <Button
        android:layout_column="1"
        android:layout_row="0"
        android:text="8"
        android:background="@drawable/eight"
        android:textSize="40dp"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:onClick="numberClick"/>
    <Button
        android:layout_column="2"
        android:layout_row="0"
        android:text="9"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@drawable/nine"
        android:textSize="40dp"
        android:onClick="numberClick"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="3"
        android:layout_row="0"
        android:text="/"
        android:background="@drawable/sign"
        android:textSize="40dp"
        android:onClick="signClick"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_row="1"
        android:text="4"
        android:background="@drawable/four"
        android:textSize="40dp"
        android:onClick="numberClick"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="1"
        android:layout_row="1"
        android:text="5"
        android:background="@drawable/five"
        android:textSize="40dp"
        android:onClick="numberClick"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="2"
        android:layout_row="1"
        android:text="6"
        android:background="@drawable/six"
        android:textSize="40dp"
        android:onClick="numberClick"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="3"
        android:layout_row="1"
        android:text="x"
        android:textAllCaps="false"
        android:background="@drawable/sign"
        android:textSize="40dp"
        android:onClick="signClick"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_row="2"
        android:text="1"
        android:background="@drawable/one"
        android:textSize="40dp"
        android:onClick="numberClick"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="1"
        android:layout_row="2"
        android:text="2"
        android:background="@drawable/two"
        android:textSize="40dp"
        android:onClick="numberClick"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="2"
        android:layout_row="2"
        android:text="3"
        android:background="@drawable/three"
        android:textSize="40dp"
        android:onClick="numberClick"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="3"
        android:layout_row="2"
        android:text="-"
        android:background="@drawable/sign"
        android:textSize="40dp"
        android:onClick="signClick"/>
    <Button
        android:id="@+id/iamdot"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_row="3"
        android:text="."
        android:background="@drawable/dot"
        android:textSize="40dp"
        android:onClick="numberClick"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="1"
        android:layout_row="3"
        android:text="0"
        android:background="@drawable/zero"
        android:textSize="40dp"
        android:onClick="numberClick"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="2"
        android:layout_row="3"
        android:text="="
        android:background="@drawable/equal"
        android:textSize="40dp"
        android:onClick="resultClick"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_column="3"
        android:layout_row="3"
        android:text="+"
        android:background="@drawable/sign"
        android:textSize="40dp"
        android:onClick="signClick"/>
</GridLayout>